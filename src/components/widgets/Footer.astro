---
import { Icon } from 'astro-icon/components';

// Customize these URLs to your actual profiles
const linkedinUrl = 'https://www.linkedin.com/in/nafissatou-faye/';
const githubUrl = 'https://github.com/';
---

<footer class="relative border-t border-gray-200 dark:border-slate-800 not-prose">
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300 py-8 md:py-12">
    <div class="flex flex-col items-center">
      <!-- Name -->
      <div class="mb-2">
        <span class="inline-block font-bold text-xl">Nafissatou Faye</span>
      </div>

      <!-- Social Icons -->
      <ul class="flex gap-4">
        <!-- LinkedIn -->
        <li>
          <a
            href={linkedinUrl}
            aria-label="LinkedIn"
            class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 
                   focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 
                   rounded-lg text-sm p-2.5 inline-flex items-center"
          >
            <Icon name="tabler:brand-linkedin" class="w-5 h-5" />
          </a>
        </li>
        <!-- GitHub -->
        <li>
          <a
            href={githubUrl}
            aria-label="GitHub"
            class="text-muted dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-700 
                   focus:outline-none focus:ring-4 focus:ring-gray-200 dark:focus:ring-gray-700 
                   rounded-lg text-sm p-2.5 inline-flex items-center"
          >
            <Icon name="tabler:brand-github" class="w-5 h-5" />
          </a>
        </li>
      </ul>
    </div>
  </div>
</footer>